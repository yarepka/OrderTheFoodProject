<div class="container">
  <!-- Showcase -->
  <header class="showcase img" style="background: url('<%= mainImage %>') no-repeat center center/cover">
    <h1>Fast Delivery To Any Place.</h1>
  </header>

  <!-- Food-menu -->
  <div class="food-nav">
    <ul>
      <li><a href="/food/burgers">Burgers</a></li>
      <li><a href="/food/sushi">Sushi</a></li>
      <li><a href="/food/pizza">Pizza</a></li>
      <li><a href="/food/healthy">Healthy</a></li>
      <li><a href="/food/vegetarian">Vegetarian</a></li>
    </ul>

    <div class="more-btn">
      <a>More <i class="fas fa-angle-down"></i></a>
      <div class="more-content">
        <a href="/food/russian">Russian</a>
        <a href="/food/asian">Asian</a>
      </div>
    </div>
  </div>

  <div class="color-content">
    <!-- Food items -->
    <div class="food-items">

      <% products.forEach((product) => {%>
      <div class="food-item">
        <div class="food-picture img" style="background:url('<%= product.imagePath %>') no-repeat center center/cover">
        </div>
        <h3 class="food-name"><%= product.title %></h3>
        <p class="food-price-add-container">
          <span class="price"><i class="fas fa-dollar-sign"></i><%= product.price.toFixed(2) %></span>
          <a class="info" href="/food/info/<%= product._id %>">Info</a>
          <a class="plus" href="/add-to-cart/<%= product._id %>">+</a>
        </p>
      </div>
      <% }); %>

    </div>

    <!-- Show more button -->
    <div class="show-btn">
      <a href="#">Show more <i class="fas fa-angle-down"></i></a>
    </div>
  </div>
</div>

<footer class="main-footer">
  Yarepka Shop &copy <span class="year"></span>
</footer>