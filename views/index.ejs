<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Are you hungry? Too lazy to go outside and buy some food? We feel you! Order the food on our website and we will deliver it to your house!"
    />
    <meta
      name="keywords"
      content="order food, restaurant, russian, georgian, asian"
    />
    <base href="/" />
    <link rel="shortcut icon" type="image/x-icon" href="./img/icon.png" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css"
      integrity="sha256-h20CPZ0QyXlBuAw7A+KluUYx/3pK+c7lYEpqLTlxjYQ="
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="./css/style.css" />
    <title>Order Food</title>
  </head>
  <body>
    <!-- Main nav-bar -->
    <div class="line">
      <div class="container">
        <!-- Nav -->
        <nav class="main-nav">
          <i class="logo fas fa-utensils fa-3x"></i>

          <ul class="main-menu">
            <li><a href="#">Restaurants</a></li>
            <li><a href="#">Couriers</a></li>
            <li><a href="#">Companies</a></li>
          </ul>

          <ul class="right-menu">
            <li class="dropdown">
              <a class="location"
                ><%= currentLocation %>
                <i class="fas fa-map-marker-alt fa-xs"></i
              ></a>
              <div class="dropdown-content">
                <% locations.forEach((location) => { %>
                <a href="/<%= location.name %>"><%= location.name %></a>
                <% }) %>
              </div>
            </li>

            <li>
              <a href="#"> Sign In <i class="fas fa-sign-in-alt fa-xs"></i> </a>
            </li>

            <li>
              <a href="#"> Sign Up <i class="fas fa-user-plus fa-xs"></i> </a>
            </li>
          </ul>
        </nav>

        <div class="menu-wrap">
          <input type="checkbox" class="toggler" />
          <div class="hamburger"><div></div></div>
          <div class="menu">
            <div>
              <div>
                <ul class="mobile-menu">
                  <li><a href="#">Restaurants</a></li>
                  <li><a href="#">Couriers</a></li>
                  <li><a href="#">Companies</a></li>
                  <li class="dropdown">
                    <a class="mobile-location"
                      ><%= currentLocation %>
                      <i class="fas fa-map-marker-alt fa-xs"></i
                    ></a>
                    <div class="dropdown-content mobile">
                      <% locations.forEach((location) => { %>
                      <a href="/<%= location.name %>"><%= location.name %></a>
                      <% }) %>
                    </div>
                  </li>
                  <li>
                    <a href="#">
                      Sign In <i class="fas fa-sign-in-alt fa-xs"></i>
                    </a>
                  </li>

                  <li>
                    <a href="#">
                      Sign Up <i class="fas fa-user-plus fa-xs"></i>
                    </a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="container">
      <!-- Showcase -->
      <header
        class="showcase"
        style="
          background: url(../img/<%=mainPhoto%>.jpg) no-repeat center
            center/cover;
        "
      >
        <h1>Fast delivery to <%= currentLocation %>.</h1>
      </header>

      <!-- Food-menu -->

      <div class="food-nav">
        <ul>
          <li><a href="/<%= currentLocation %>/All">All</a></li>
          <li><a href="/<%= currentLocation %>/Burgers">Burgers</a></li>
          <li><a href="/<%= currentLocation %>/Sushi">Sushi</a></li>
          <li><a href="/<%= currentLocation %>/Pizza">Pizza</a></li>
          <li><a href="/<%= currentLocation %>/Healthy">Healthy</a></li>
          <li><a href="/<%= currentLocation %>/Vegetarian">Vegetarian</a></li>
        </ul>

        <div class="more-btn">
          <a>More <i class="fas fa-angle-down"></i></a>
          <div class="more-content">
            <a href="/<%= currentLocation %>/Russian">Russian</a>
            <a href="/<%= currentLocation %>/Italian">Italian</a>
            <a href="/<%= currentLocation %>/Asian">Asian</a>
            <a href="/<%= currentLocation %>/Georgian">Georgian</a>
          </div>
        </div>
      </div>

      <div class="color-content">
        <!-- Food items -->
        <div class="food-items">

          <% food.forEach(food => { %>
            <div class="food-item">
              <a href="<%= currentLocation %>/<%= food.type %>/<%= food.id %>">
                <div class="food-picture" style="background: url('img/burgers/<%= food.picture %>.jpg') no-repeat center center/cover"></div>
                <h3 class="food-name"><%= food.name %></h3>
                <p class="food-price">
                  <i class="fas fa-wallet"></i> <%= food.price %><i
                    class="fas fa-dollar-sign"
                  ></i>
                </p>
              </a>
            </div>
          <% }) %>
      </div>

      <!-- Show more button -->
      <div class="show-btn">
        <a href="#">Show more <i class="fas fa-angle-down"></i></a>
      </div>
    </div>

    <footer class="main-footer">
      Yarepka Shop &copy <span class="year"></span>
    </footer>

    <script src="./js/main.js"></script>
  </body>
</html>
